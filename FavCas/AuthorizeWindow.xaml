<Window x:Class="FavCas.AuthorizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthorizeWindow" Height="300" Width="300"
        Loaded="Window_Loaded">
    <StackPanel>
        <Border BorderBrush="Gray" BorderThickness="2.0" CornerRadius="5" Margin="5">
            <StackPanel Margin="5">
                <TextBlock>1.Twitterで認証を行ってください。</TextBlock>
                <Button Name="authButton" Margin="10, 0" Click="authButton_Click">認証する</Button>
            </StackPanel>
        </Border>
        <Separator Height="5" Visibility="Hidden" />
        <Border BorderBrush="Gray" BorderThickness="2.0" CornerRadius="5" Margin="5">
            <StackPanel Margin="2">
                <TextBlock>2.表示されたPINコードを入力してください。</TextBlock>
                <TextBox Name="pincodeBox" Margin="10, 0" />
            </StackPanel>
        </Border>
        <Separator Height="10px" Visibility="Hidden" />
        <Button Name="okButton" Margin="20, 5" Click="okButton_Click">OK</Button>
        <Button IsCancel="True" Margin="20, 5">キャンセル</Button>
    </StackPanel>
</Window>
